generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id             String   @id @default(cuid())
  senderName     String
  receiverName   String
  receiverEmail  String
  amount         Float
  referenceCode  String   @unique
  status         String   @default("pending")
  createdAt      DateTime @default(now())
}
